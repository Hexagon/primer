{
    "tasks": {
        /* 
          Permissions 
           --allow-read for dynamic loading of wasm
           --allow-net for dynamic loading of modules which in turns imports from deno.land
        */
        "bench": "deno bench --unstable --allow-read --allow-net bench.js",
        "test": "deno test --unstable --allow-read --allow-net tests.js",
        /* 
           Build scripts for implementations
        */
        "build-simplewasm": "emcc -O3 -s WASM_BIGINT --no-entry implementations/simplewasm/src/index.c -o implementations/simplewasm/index.wasm"
    }
}